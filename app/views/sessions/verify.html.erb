<div class="min-h-screen flex items-center justify-center bg-gray-900">
  <div class="w-full max-w-xs">
    <h1 class="text-3xl font-bold text-white text-center mb-4">Debrief</h1>
    <p class="text-gray-400 text-center mb-8">Enter the 6-digit code sent to<br><strong class="text-white"><%= @email %></strong></p>

    <%= form_with url: confirm_session_path, method: :post, class: "space-y-6" do |f| %>
      <%= f.hidden_field :email, value: @email %>

      <% if flash[:alert] %>
        <div class="bg-red-500/20 border border-red-500 text-red-300 px-4 py-3 rounded">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <div>
        <label for="code" class="sr-only">Code</label>
        <%= f.text_field :code,
            placeholder: "000000",
            autofocus: true,
            autocomplete: "one-time-code",
            inputmode: "numeric",
            pattern: "[0-9]*",
            maxlength: 6,
            class: "w-full px-4 py-4 text-2xl text-center tracking-[0.5em] bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <%= f.submit "Sign In", class: "w-full py-4 px-4 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors cursor-pointer" %>
    <% end %>

    <div class="mt-6 text-center">
      <%= link_to "Use different email", new_session_path, class: "text-gray-400 hover:text-white text-sm" %>
    </div>
  </div>
</div>
