<div class="min-h-screen flex items-center justify-center bg-gray-900">
  <div class="w-full max-w-xs">
    <h1 class="text-3xl font-bold text-white text-center mb-8">Debrief</h1>

    <%= form_with url: session_path, method: :post, class: "space-y-6" do |f| %>
      <% if flash[:alert] %>
        <div class="bg-red-500/20 border border-red-500 text-red-300 px-4 py-3 rounded">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <div>
        <label for="email" class="sr-only">Email</label>
        <%= f.email_field :email,
            placeholder: "your@email.com",
            autofocus: true,
            autocomplete: "email",
            class: "w-full px-4 py-4 text-lg text-center bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <%= f.submit "Send Code", class: "w-full py-4 px-4 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors cursor-pointer" %>
    <% end %>
  </div>
</div>
