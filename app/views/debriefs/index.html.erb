<div class="h-full bg-gray-900 flex flex-col overflow-hidden" style="padding-bottom: env(safe-area-inset-bottom);">
  <!-- Header -->
  <header class="flex-shrink-0 flex items-center justify-between px-3 py-3 border-b border-gray-800">
    <%= link_to new_debrief_path, class: "w-14 h-14 flex items-center justify-center rounded-2xl bg-gray-800 text-blue-400 hover:text-blue-300 hover:bg-gray-700 active:bg-gray-600 transition-colors" do %>
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
      </svg>
    <% end %>
    <h1 class="text-white font-medium text-lg">History</h1>
    <div class="w-14"></div>
  </header>

  <% if flash[:notice] %>
    <div class="bg-green-500/20 border-b border-green-500 text-green-300 px-4 py-3">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <!-- Auto-refresh if any debriefs are still processing -->
  <% if @debriefs.any? { |d| d.pending? || d.transcribing? } %>
    <meta http-equiv="refresh" content="3">
  <% end %>

  <!-- List -->
  <div class="flex-1 overflow-y-auto divide-y divide-gray-800">
    <% if @debriefs.empty? %>
      <div class="p-8 text-center text-gray-500">
        No debriefs yet
      </div>
    <% else %>
      <% @debriefs.each do |debrief| %>
        <%= link_to debrief_path(debrief), class: "block p-4 hover:bg-gray-800 transition-colors" do %>
          <div class="flex items-center justify-between">
            <div class="flex-1 min-w-0">
              <div class="flex items-center gap-2 mb-1">
                <% if debrief.recorded_by.present? %>
                  <span class="text-blue-400 font-medium">
                    <%= debrief.recorded_by %>
                  </span>
                  <span class="text-gray-600">&middot;</span>
                <% end %>
                <span class="text-white font-medium">
                  <%= debrief.created_at.strftime("%b %d") %>
                </span>
                <span class="text-gray-500 text-sm">
                  <%= debrief.created_at.strftime("%H:%M") %>
                </span>
                <%= render_status_badge(debrief) %>
                <% if debrief.attachments.attached? %>
                  <span class="text-gray-500" title="<%= debrief.attachments.count %> attachment(s)">
                    <svg class="w-4 h-4 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13"/>
                    </svg>
                  </span>
                <% end %>
              </div>
              <p class="text-gray-400 text-sm truncate">
                <%= debrief.transcript.present? ? truncate(debrief.transcript, length: 100) : "Pending transcription..." %>
              </p>
            </div>
            <svg class="w-5 h-5 text-gray-600 ml-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
