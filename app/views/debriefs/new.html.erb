<div class="min-h-screen bg-gray-900 flex flex-col" data-controller="recorder">
  <!-- Header -->
  <header class="flex items-center justify-between p-4">
    <%= link_to debriefs_path, class: "text-gray-400 hover:text-white" do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
    <% end %>
    <h1 class="text-white font-medium">Debrief</h1>
    <%= button_to logout_path, method: :delete, class: "text-gray-400 hover:text-white" do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
      </svg>
    <% end %>
  </header>

  <!-- Main content -->
  <main class="flex-1 flex flex-col items-center justify-center p-8">
    <!-- Timer -->
    <div class="text-6xl font-mono text-white mb-12" data-recorder-target="timer">
      00:00
    </div>

    <!-- Idle state: Record button -->
    <button
      type="button"
      data-action="click->recorder#start"
      data-recorder-target="button"
      class="w-32 h-32 rounded-full bg-red-500 hover:bg-red-600 focus:outline-none focus:ring-4 focus:ring-red-500/50 transition-all flex items-center justify-center"
    >
      <div data-recorder-target="icon" class="w-12 h-12 rounded-full bg-white"></div>
    </button>

    <!-- Recording state: Stop and Cancel buttons -->
    <div data-recorder-target="recordingButtons" class="hidden flex gap-6">
      <button
        type="button"
        data-action="click->recorder#cancel"
        class="w-20 h-20 rounded-full bg-gray-600 hover:bg-gray-500 focus:outline-none focus:ring-4 focus:ring-gray-500/50 transition-all flex items-center justify-center"
      >
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
      <button
        type="button"
        data-action="click->recorder#stop"
        class="w-32 h-32 rounded-full bg-red-600 animate-pulse focus:outline-none focus:ring-4 focus:ring-red-500/50 transition-all flex items-center justify-center"
      >
        <div class="w-10 h-10 rounded-sm bg-white"></div>
      </button>
    </div>

    <!-- Preview state: Send and Cancel buttons -->
    <div data-recorder-target="previewButtons" class="hidden flex gap-6">
      <button
        type="button"
        data-action="click->recorder#cancel"
        class="w-20 h-20 rounded-full bg-gray-600 hover:bg-gray-500 focus:outline-none focus:ring-4 focus:ring-gray-500/50 transition-all flex items-center justify-center"
      >
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
      <button
        type="button"
        data-action="click->recorder#send"
        class="w-32 h-32 rounded-full bg-green-500 hover:bg-green-600 focus:outline-none focus:ring-4 focus:ring-green-500/50 transition-all flex items-center justify-center"
      >
        <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
      </button>
    </div>

    <!-- Status -->
    <p class="mt-8 text-gray-400" data-recorder-target="status">
      Tap to record
    </p>
  </main>
</div>
