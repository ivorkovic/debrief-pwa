<div class="h-full bg-gray-900 flex flex-col overflow-hidden" style="padding-bottom: env(safe-area-inset-bottom);">
  <!-- Auto-refresh while processing -->
  <% if @debrief.pending? || @debrief.transcribing? %>
    <meta http-equiv="refresh" content="3">
  <% end %>

  <!-- Header -->
  <header class="flex-shrink-0 flex items-center justify-between p-4 border-b border-gray-800">
    <%= link_to debriefs_path, class: "text-blue-400 hover:text-blue-300" do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
    <% end %>
    <h1 class="text-white font-medium">
      <%= @debrief.created_at.strftime("%b %d, %Y %H:%M") %>
    </h1>
    <div class="w-6"></div>
  </header>

  <!-- Scrollable content area -->
  <div class="flex-1 overflow-y-auto">
    <% if flash[:notice] %>
      <div class="bg-green-500/20 border-b border-green-500 text-green-300 px-4 py-3">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="bg-red-500/20 border-b border-red-500 text-red-300 px-4 py-3">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <!-- Content -->
    <div class="p-4 space-y-4">
    <!-- Status -->
    <div class="flex items-center gap-2">
      <% if @debrief.recorded_by.present? %>
        <span class="text-blue-400 font-medium"><%= @debrief.recorded_by %></span>
        <span class="text-gray-600">&middot;</span>
      <% end %>
      <%= render_status_badge(@debrief) %>
      <% if @debrief.processed_at %>
        <span class="text-gray-500 text-sm">
          Processed <%= time_ago_in_words(@debrief.processed_at) %> ago
        </span>
      <% end %>
    </div>

    <!-- Audio player -->
    <% if @debrief.audio.attached? %>
      <div class="bg-gray-800 rounded-lg p-4">
        <audio controls class="w-full" preload="metadata">
          <source src="<%= url_for(@debrief.audio) %>" type="<%= @debrief.audio.content_type %>">
        </audio>
      </div>
    <% end %>

    <!-- Completion Summary -->
    <% if @debrief.completion_summary.present? %>
      <div class="bg-blue-900/30 border border-blue-700 rounded-lg p-4">
        <h2 class="text-blue-400 text-sm font-medium mb-2">Task Completed</h2>
        <div class="text-white"><%= @debrief.completion_summary %></div>
        <% if @debrief.completed_at %>
          <p class="text-gray-500 text-xs mt-2">
            <%= time_ago_in_words(@debrief.completed_at) %> ago
          </p>
        <% end %>
      </div>
    <% end %>

    <!-- Transcript / Message -->
    <div class="bg-gray-800 rounded-lg p-4">
      <h2 class="text-gray-400 text-sm font-medium mb-2">
        <%= @debrief.audio? ? "Transcript" : "Message" %>
      </h2>
      <% if @debrief.transcript.present? %>
        <div class="text-white whitespace-pre-wrap"><%= @debrief.transcript %></div>
      <% elsif @debrief.pending? || @debrief.transcribing? %>
        <p class="text-gray-500 italic">Transcription in progress...</p>
      <% elsif @debrief.failed? %>
        <p class="text-red-400">Transcription failed: <%= @debrief.error_message %></p>
      <% end %>
    </div>

    <!-- Attachments -->
    <% if @debrief.attachments.attached? %>
      <div class="bg-gray-800 rounded-lg p-4">
        <h2 class="text-gray-400 text-sm font-medium mb-3">
          Attachments (<%= @debrief.attachments.count %>)
        </h2>
        <div class="space-y-2">
          <% @debrief.attachments.each do |attachment| %>
            <div class="flex items-center gap-3 bg-gray-700/50 rounded-lg p-3">
              <% if attachment.content_type.start_with?("image/") %>
                <%= image_tag url_for(attachment), class: "w-12 h-12 object-cover rounded" %>
              <% else %>
                <div class="w-12 h-12 bg-gray-600 rounded flex items-center justify-center">
                  <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                  </svg>
                </div>
              <% end %>
              <div class="flex-1 min-w-0">
                <p class="text-white text-sm truncate"><%= attachment.filename %></p>
                <p class="text-gray-500 text-xs"><%= number_to_human_size(attachment.byte_size) %></p>
              </div>
              <%= link_to url_for(attachment), target: "_blank", class: "text-blue-400 hover:text-blue-300" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                </svg>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Actions -->
    <div class="flex gap-3 pt-4">
      <% if @debrief.done? %>
        <%= button_to resend_debrief_path(@debrief), method: :post, class: "flex-1 bg-blue-600 hover:bg-blue-500 text-white font-medium py-3 px-4 rounded-lg transition-colors flex items-center justify-center gap-2" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
          </svg>
          Resend
        <% end %>
      <% end %>

      <%= button_to debrief_path(@debrief), method: :delete, data: { turbo_confirm: "Delete this recording?" }, class: "flex-1 bg-red-600 hover:bg-red-500 text-white font-medium py-3 px-4 rounded-lg transition-colors flex items-center justify-center gap-2" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
        </svg>
        Delete
      <% end %>
    </div>
  </div>
  </div>
</div>
